<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="64dp"
    android:background="@drawable/bg_edit_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_remind_punctuality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/remind_punctuality"
        android:textColor="@color/colorSpecialBlack" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSpecialBlack" />

    <TextView
        android:id="@+id/tv_not_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/not_remind"
        android:textColor="@color/colorSpecialBlack" />

</LinearLayout>
